# =============================================
# نظام SCADA - Environment Variables Example
# =============================================
# انسخ هذا الملف إلى .env وعدّل القيم حسب بيئتك
# cp .env.example .env
# =============================================

# Database Configuration
DB_USER=scada_user
DB_PASSWORD=scada_pass123
DB_NAME=scada_db
DATABASE_URL="postgresql://scada_user:scada_pass123@localhost:5432/scada_db?schema=public"

# Application Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS Configuration
CORS_ORIGINS=http://localhost:4200,http://localhost:80

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
